<h1>Burgers</h1>

<h2> Burgers that are not eaten </h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}
        <button class="devourButton" data-id="{{id}}">Devour this beast</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2> Burgers that have been eaten </h2>

<ul>
    {{#each burgers }}
    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="burgerName">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
    </div>

    <button type="submit">Create Burger</button>
</form>